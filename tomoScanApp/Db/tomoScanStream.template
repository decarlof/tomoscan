record(longout, "$(P)$(R)StreamPreCount")
{
   field(LOPR, "0")
   field(HOPR, "20000")
}

record(longout, "$(P)$(R)StreamPreCounted")
{
   field(LOPR, "0")
   field(HOPR, "20000")
}

record(mbbo, "$(P)$(R)StreamBinning")
{
   field(ZRVL, "0")
   field(ZRST, "1x")
   field(ONVL, "1")
   field(ONST, "2x")
   field(TWVL, "2")
   field(TWST, "4x")
}

record(waveform,"$(P)$(R)StreamMessage") 
{
   field(FTVL, "UCHAR")
   field(NELM, "256")
}

record(waveform,"$(P)$(R)StreamCBStatusMessage") 
{
