   field(NELM, "256")
}

record(stringout, "$(P)$(R)PvaStreamPVPrefix")
{
   field(VAL,  "$(PVA_STREAM)")
}

record(bo, "$(P)$(R)StreamSync")
{
   field(ZNAM, "Done")
   field(ONAM, "Sync")
}

record(longout, "$(P)$(R)FirstProjid")
{
   field(LOPR, "0")
}

record(bo, "$(P)$(R)StreamScanType")
{
   field(ZNAM, "backforth")
   field(ONAM, "continuous")
}
